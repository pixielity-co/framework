{
    "$schema": "https://raw.githubusercontent.com/infection/infection/master/resources/schema.json",
    "source": {
        "directories": [
            "src/PackageA/src"
        ],
        "excludes": [
            "vendor",
            "tests",
            "stubs",
            "cache"
        ]
    },
    "logs": {
        "text": "var/log/infection.log",
        "html": "var/log/infection.html",
        "summary": "var/log/infection-summary.log",
        "json": "var/log/infection.json",
        "perMutator": "var/log/infection-per-mutator.md"
    },
    "tmpDir": "var/cache/infection",
    "timeout": 10,
    "phpUnit": {
        "configDir": ".",
        "customPath": "vendor/bin/phpunit"
    },
    "mutators": {
        "@default": true,
        "@function_signature": true,
        "@number": true,
        "@operator": true,
        "@regex": true,
        "@removal": true,
        "@return_value": true,
        "@sort": true,
        "@cast": true,
        "@unwrap": true,
        "@extensions": true,
        "MethodCallRemoval": {
            "ignore": [
                "Mockery::*",
                "PHPUnit\\Framework\\TestCase::*"
            ]
        }
    },
    "minMsi": 80,
    "minCoveredMsi": 90,
    "bootstrap": "vendor/autoload.php",
    "testFramework": "phpunit",
    "testFrameworkOptions": "--no-coverage",
    "ignoreMsiWithNoMutations": true
}
