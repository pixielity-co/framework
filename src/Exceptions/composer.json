{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "pixielity/exceptions",
    "description": "The Pixielity Exceptions Component - Framework exception classes.",
    "type": "library",
    "keywords": [
        "pixielity",
        "exceptions",
        "errors",
        "framework"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Pixielity Team",
            "email": "team@pixielity.com",
            "homepage": "https://pixielity.com"
        }
    ],
    "homepage": "https://github.com/pixielity/framework",
    "support": {
        "issues": "https://github.com/pixielity/framework/issues",
        "source": "https://github.com/pixielity/framework/tree/main/src/Exceptions",
        "docs": "https://docs.pixielity.com/packages/exceptions"
    },
    "require": {
        "php": "^8.3 || ^8.4 || ^8.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "Pixielity\\Exceptions\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pixielity\\Exceptions\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
